config DDK_VERSION_OS
	string "version"
	default ANDROID_MAJOR_VERSION
	help
		Android OS major version

menuconfig MALI_TMIX
	tristate "Mali-TMIX support"
	default n
	help
	  Enable this option to build support for the ARM Mali-T7xx GPU.

	  To compile this driver as a module, choose M here:
	  this will generate a single module, called mali_kbase.

choice
	prompt "version Configuration"
	depends on MALI_TMIX
	default MALI_TMIX_R3P0 if ANDROID_VERSION = "70000"
	default MALI_TMIX_R9P0 if ANDROID_VERSION = "80000"
	default MALI_TMIX_R9P0 if ANDROID_VERSION = "80100"
	default MALI_TMIX_R16P0 if ANDROID_VERSION >= "90000"
	help
	  Select the gpu support version.

config MALI_TMIX_R0P0
	depends on MALI_TMIX
	bool "mimir r0p0 driver"

config MALI_TMIX_R2P0
	depends on MALI_TMIX
	bool "mimir r2p0 driver"

config MALI_TMIX_R3P0
	depends on MALI_TMIX
	bool "mimir r3p0 driver"

config MALI_TMIX_R8P0
	depends on MALI_TMIX
	bool "mimir r8p0 driver"
config MALI_TMIX_R9P0
	depends on MALI_TMIX
	bool "mimir r9p0 driver"

config MALI_TMIX_R16P0
	depends on MALI_TMIX
	bool "Bifrost r16p0 driver"

endchoice

if MALI_TMIX_R0P0
source "drivers/gpu/arm/tMIx/r0p0/Kconfig"
endif

if MALI_TMIX_R2P0
source "drivers/gpu/arm/tMIx/r2p0/Kconfig"
endif

if MALI_TMIX_R3P0
source "drivers/gpu/arm/tMIx/r3p0/Kconfig"
endif

if MALI_TMIX_R8P0
source "drivers/gpu/arm/tMIx/r8p0/Kconfig"
endif

if MALI_TMIX_R9P0
source "drivers/gpu/arm/tMIx/r9p0/Kconfig"
endif

if MALI_TMIX_R16P0
source "drivers/gpu/arm/b_r16p0/Kconfig"
endif
